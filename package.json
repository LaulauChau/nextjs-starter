{
  "name": "nextjs-starter",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "commit": "git-cz",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "dev": "next dev",
    "lint": "pnpm dlx @biomejs/biome check --write .",
    "preinstall": "npx only-allow pnpm",
    "prepare": "if [ -d \"./.git\" ]; then husky; fi",
    "start": "cp -r \"./public\" \"./.next/standalone/public\" && cp -r \"./.next/static\" \"./.next/standalone/.next/static\" && node \"./.next/standalone/server.js\"",
    "test": "SKIP_ENV_VALIDATION=true vitest run --passWithNoTests"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@lucia-auth/adapter-drizzle": "^1.0.7",
    "@node-rs/argon2": "^1.8.3",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@t3-oss/env-nextjs": "^0.11.0",
    "@tanstack/react-query": "^5.51.16",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.32.1",
    "lucia": "^3.2.0",
    "lucide-react": "^0.418.0",
    "next": "14.2.5",
    "next-themes": "^0.3.0",
    "postgres": "^3.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "sanitize-html": "^2.13.0",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@commitlint/types": "^19.0.3",
    "@testcontainers/postgresql": "^10.11.0",
    "@types/node": "^22.0.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/sanitize-html": "^2.11.0",
    "commitizen": "^4.3.0",
    "drizzle-kit": "^0.23.1",
    "husky": "^9.1.4",
    "inquirer": "^10.1.6",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "bun": "please-use-pnpm",
    "node": ">=20.16.0",
    "npm": "please-use-pnpm",
    "pnpm": ">=9.6.0",
    "yarn": "please-use-pnpm"
  }
}
